<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
   <session-factory>
   
      <property name = "hibernate.dialect">
         com.enigmabridge.hibernate.dialect.SQLiteDialect
      </property>
      
      <property name = "hibernate.connection.driver_class">
         org.sqlite.JDBC
      </property>
      
      <property name = "hibernate.connection.url">
         jdbc:sqlite:database/database.sqlite
      </property>
      
      <!-- List of XML mapping files -->
      <mapping resource = "edu/unlam/asistente/database/hibernate/cfg/Usuario.hbm.xml"/>
      <mapping resource = "edu/unlam/asistente/database/hibernate/cfg/Evento.hbm.xml"/>
      
   </session-factory>
</hibernate-configuration>